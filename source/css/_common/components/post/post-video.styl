.post-video {
  display: table;
  table-layout: fixed;
  width: 100%;
  border-collapse: separate;
}

.post-video-row { display: table-row; }

.post-video .post-video-img {
  position: relative;
  display: table-cell;
  text-align: center;
  vertical-align: middle;
  border: none;
}

.page-video .page-video-img .page-video-icon, .post-video .post-video-img .post-video-icon {
  position: absolute;
  color: #f3f3f3;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
  -ms-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}

.post-video .post-video-img img {
  max-width: 100%;
  max-height: 100%;
  border: none;
}

.fancybox-caption {
  padding: 10px 44px;
}

.fancybox-close, .fancybox-close:hover { border: none; }
